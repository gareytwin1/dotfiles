alias alias_config="nvim $DOTFILES_DIR/aliasrc"
alias conda_config="nvim ~/.condarc"
alias ssh_config="nvim ~/.ssh/config"
alias git_config="nvim ~/.git_config"

alias chrome="google-chrome-stable"
